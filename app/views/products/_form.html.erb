<%= form_for @product, :html => {multipart: true, :class => "form-horizontal product"} do |f| %>

    <% if @product.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> hata var.</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @product.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, 'Ä°smi', :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <%= f.error_span(:name) %>
    </div>

    <div class="form-group">
      <%= f.label :price, 'Fiyat', :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :price, :class => 'form-control' %>
      </div>
      <%= f.error_span(:price) %>
    </div>


    <div class="form-group">
      <%= f.label :image, 'Resim', :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.file_field :image, :class => 'form-control' %>
      </div>
      <%= f.error_span(:price) %>
    </div>

    <hr>

    <div class="form-group">
      <%= f.label :position, 'SÄ±ralama', :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :position, :class => 'form-control' %>
      </div>
      <%= f.error_span(:position) %>
    </div>

    <div class="form-group">
      <%= f.label :count_on_hand, 'Stok miktarÄ±', :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :count_on_hand, :class => 'form-control' %>
      </div>
      <%= f.error_span(:count_on_hand) %>
    </div>

    <div class="form-group">
      <%= f.label :active, 'Aktif', :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.check_box :active, :class => 'form-control' %>
      </div>
      <%= f.error_span(:active) %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit 'Kaydet', :class => 'btn btn-primary' %>
        <%= link_to t("helpers.links.cancel"),
                    products_path, :class => 'btn btn-default' %>
      </div>
    </div>

<% end %>
