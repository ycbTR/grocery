<%- model_class = Account -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_account_path,
              :class => 'btn btn-primary' %>
  <div class="clearfix"></div>
</div>
<table class="table table-striped">
  <thead>
  <th colspan="7">
    <%= search_form_for @q do |f| %>
        <%= f.search_field :name_cont, placeholder: 'İsim' %>
        <%= f.submit %>
    <% end %>
  </th>

  <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:card) %></th>
      <th><%= model_class.human_attribute_name(:balance) %></th>
      <th><%= model_class.human_attribute_name(:admin) %></th>
      <th><%= t :created_at %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= link_to account.id, account_path(account) %></td>
        <td><%= account.name %></td>
        <td><%= account.card %></td>
        <td><%= account.balance %></td>
        <td><%= account.admin %></td>
        <td><%=l account.created_at %></td>
        <td>
          <%= link_to 'Bakiye Yükle',
                      new_account_activity_path(account_id: account.id, return_to: accounts_path), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_account_path(account), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      account_path(account),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @accounts,:theme => 'twitter-bootstrap-3' %>
<br>
<%= page_entries_info @accounts %>
